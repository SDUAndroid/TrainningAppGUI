<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" >
    </LinearLayout>

    <Button
        android:id="@+id/buttonAdapt"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/adaptsensorvalue" />

    <Button
        android:id="@+id/buttonPersonal"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonAdapt"
        android:layout_marginTop="15dp"
        android:text="@string/persnow" />

    <Button
        android:id="@+id/buttonRemove"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonPersonal"
        android:layout_marginTop="15dp"
        android:text="@string/removeinfo" />

</RelativeLayout>